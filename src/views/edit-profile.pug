extends base.pug

block content 
   
    if errorMessage 
        span=errorMessage

    form(method="POST")
        input(name="name", type="text", placeholder="성함", value=loggedInUser.name,required) 
        input(name="username", type="text", placeholder="아이디" , value=loggedInUser.username, required)
        input(name="email", type="email", placeholder="이메일",value=loggedInUser.email, required)
        input(name="location", type="text", placeholder="거주지", value=loggedInUser.location, required) 
        input(type="submit", value="Update Profile")