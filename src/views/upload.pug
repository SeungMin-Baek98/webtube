extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Upload Video 
        input(type="file", id="video" accept="video/*" name="video" required)
        input(name="title", placeholder="Title", type="text", maxlength=80, required)
        input(name="description", placeholder="Description", type="text", minlength=20, required)
        input(name="hashtags", placeholder="Hastagas, seperated by comma.", type="text", required)
        input(value="Upload Video" type="submit") 
